<Window x:Class="RecordingsHelper.WPF.Views.LlmPromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="LLM Enhancement Prompt"
        Height="450"
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Enter prompt for LLM enhancement (one instruction per line):"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Each line will be sent as a separate prompt instruction to the API."
                       FontSize="11"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <TextBox Grid.Row="1"
                 x:Name="PromptTextBox"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 materialDesign:HintAssist.Hint="Enter each instruction on a new line..."
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Apply Default"
                    Click="ApplyDefaultButton_Click"
                    Width="120"
                    Margin="0,0,10,0"
                    ToolTip="Apply default SSA hearing prompts"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="OK"
                    IsDefault="True"
                    Click="OkButton_Click"
                    Width="80"
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignRaisedButton}"/>
            <Button Content="Cancel"
                    IsCancel="True"
                    Click="CancelButton_Click"
                    Width="80"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
        </StackPanel>
    </Grid>
</Window>
