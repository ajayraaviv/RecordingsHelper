<Window x:Class="RecordingsHelper.WPF.Views.TranscriptionSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Azure Speech Settings"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
            <StackPanel>
                <TextBlock Text="Azure Speech-to-Text Settings"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           Foreground="White"/>
                <TextBlock Text="Configure your Azure Cognitive Services credentials"
                           Opacity="0.8"
                           Foreground="White"
                           Margin="0,4,0,0"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Settings Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- Subscription Key -->
                <TextBlock Text="Subscription Key*"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Margin="0,0,0,4"/>
                <PasswordBox x:Name="SubscriptionKeyBox"
                             materialDesign:HintAssist.Hint="Enter your Azure Speech subscription key"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             Margin="0,0,0,16"/>

                <!-- Region -->
                <TextBlock Text="Region*"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Margin="0,0,0,4"/>
                <ComboBox SelectedValue="{Binding Region}"
                          SelectedValuePath="Tag"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="Select Azure region"
                          Margin="0,0,0,16">
                    <ComboBoxItem Content="East US" Tag="eastus"/>
                    <ComboBoxItem Content="West US" Tag="westus"/>
                    <ComboBoxItem Content="West US 2" Tag="westus2"/>
                    <ComboBoxItem Content="Central US" Tag="centralus"/>
                    <ComboBoxItem Content="East US 2" Tag="eastus2"/>
                    <ComboBoxItem Content="North Europe" Tag="northeurope"/>
                    <ComboBoxItem Content="West Europe" Tag="westeurope"/>
                    <ComboBoxItem Content="UK South" Tag="uksouth"/>
                    <ComboBoxItem Content="Southeast Asia" Tag="southeastasia"/>
                    <ComboBoxItem Content="East Asia" Tag="eastasia"/>
                    <ComboBoxItem Content="Australia East" Tag="australiaeast"/>
                    <ComboBoxItem Content="Japan East" Tag="japaneast"/>
                    <ComboBoxItem Content="South India" Tag="southindia"/>
                    <ComboBoxItem Content="Canada Central" Tag="canadacentral"/>
                    <ComboBoxItem Content="Brazil South" Tag="brazilsouth"/>
                </ComboBox>

                <!-- Language -->
                <TextBlock Text="Language"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           Margin="0,0,0,4"/>
                <ComboBox SelectedValue="{Binding Language}"
                          SelectedValuePath="Tag"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="Speech recognition language"
                          Margin="0,0,0,16">
                    <ComboBoxItem Content="English (US)" Tag="en-US"/>
                    <ComboBoxItem Content="English (UK)" Tag="en-GB"/>
                    <ComboBoxItem Content="Spanish" Tag="es-ES"/>
                    <ComboBoxItem Content="French" Tag="fr-FR"/>
                    <ComboBoxItem Content="German" Tag="de-DE"/>
                    <ComboBoxItem Content="Italian" Tag="it-IT"/>
                    <ComboBoxItem Content="Japanese" Tag="ja-JP"/>
                    <ComboBoxItem Content="Korean" Tag="ko-KR"/>
                    <ComboBoxItem Content="Chinese (Simplified)" Tag="zh-CN"/>
                    <ComboBoxItem Content="Portuguese (Brazil)" Tag="pt-BR"/>
                    <ComboBoxItem Content="Hindi" Tag="hi-IN"/>
                </ComboBox>

                <!-- Azure Storage Settings -->
                <TextBlock Text="Azure Storage Account (for Batch Transcription)"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                           Margin="0,16,0,8"/>

                <!-- Storage Account Name -->
                <TextBox Text="{Binding StorageAccountName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Storage Account Name"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Margin="0,0,0,16"/>

                <!-- Storage Account Key -->
                <PasswordBox x:Name="StorageKeyPasswordBox"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             materialDesign:HintAssist.Hint="Storage Account Key"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             Margin="0,0,0,16"/>

                <!-- Storage Container Name -->
                <TextBox Text="{Binding StorageContainerName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Storage Container Name"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Margin="0,0,0,16"/>

                <!-- Help Text -->
                <Border Background="{DynamicResource MaterialDesignDivider}"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="ℹ How to get Azure Speech credentials:"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap">
                            1. Go to <Hyperlink NavigateUri="https://portal.azure.com" RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Azure Portal"/>
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock Text="2. Create a Cognitive Services resource"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="3. Navigate to 'Keys and Endpoint'"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="4. Copy the Key and Region values"
                                   TextWrapping="Wrap"/>
                        
                        <TextBlock Text="ℹ For Batch Transcription storage:"
                                   FontWeight="SemiBold"
                                   Margin="0,12,0,8"/>
                        <TextBlock Text="1. Create a Storage Account in Azure Portal"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="2. Navigate to 'Access keys'"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="3. Copy the Storage account name and Key 1"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="4. Container will be created automatically"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="0,1,0,0"
                Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="CancelButton_Click"
                        Margin="0,0,8,0"/>
                <Button Content="Save"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
