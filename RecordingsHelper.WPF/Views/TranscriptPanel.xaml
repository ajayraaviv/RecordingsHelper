<UserControl x:Class="RecordingsHelper.WPF.Views.TranscriptPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:RecordingsHelper.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    
    <UserControl.Resources>
        <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <materialDesign:Card>
        <materialDesign:Card.Style>
            <Style TargetType="materialDesign:Card" BasedOn="{StaticResource {x:Type materialDesign:Card}}">
                <Setter Property="Padding" Value="12"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsCollapsed}" Value="True">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Width" Value="50"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </materialDesign:Card.Style>
        <Grid>
            <!-- Expanded View -->
            <Grid Visibility="{Binding IsCollapsed, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="200"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="{Binding TranscriptFileName}" 
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"
                               ToolTip="{Binding TranscriptFileName}"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding LoadTranscriptCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="28"
                                Padding="8,4"
                                Margin="0,0,6,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileDocument" VerticalAlignment="Center" Width="16" Height="16" Margin="0,0,4,0"/>
                                <TextBlock Text="Load" FontSize="12"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ClearTranscriptCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="28"
                                Padding="8,4"
                                Visibility="{Binding HasTranscript, Converter={StaticResource BoolToVisibilityConverter}}"
                                Margin="0,0,6,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Close" VerticalAlignment="Center" Width="16" Height="16" Margin="0,0,4,0"/>
                                <TextBlock Text="Clear" FontSize="12"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ToggleCollapseCommand}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Collapse Panel"
                                Width="20" Height="20">
                            <materialDesign:PackIcon Kind="{Binding CollapseIcon}" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Search Box -->
                <TextBox Grid.Row="1"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Search transcript..."
                         materialDesign:HintAssist.HelperText="{Binding SegmentCountText}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="12"
                         Padding="8,6"
                         Margin="0,0,0,16">
                </TextBox>

                <!-- Transcript List -->
                <Border Grid.Row="2"
                        BorderBrush="{DynamicResource MaterialDesignDivider}"
                        BorderThickness="1"
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                        CornerRadius="4"
                        Margin="0,0,0,0">
                    <ListBox x:Name="TranscriptList"
                             ItemsSource="{Binding FilteredSegments}"
                             SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="4">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="6,4"
                                        Margin="0,0,0,2">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Time and Speaker -->
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,2">
                                            <TextBlock Text="{Binding StartTime, Converter={StaticResource TimeSpanToStringConverter}}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,6,0"/>
                                            <TextBlock Text="-" FontSize="11" Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding EndTime, Converter={StaticResource TimeSpanToStringConverter}}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,12,0"/>
                                            <TextBlock Text="{Binding Speaker}"
                                                       FontSize="11"
                                                       FontStyle="Italic"
                                                       Opacity="0.7"/>
                                        </StackPanel>

                                        <!-- Text -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Text}"
                                                   TextWrapping="Wrap"
                                                   FontSize="12"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>

            <!-- Collapsed View -->
            <Button Command="{Binding ToggleCollapseCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Height="{Binding RelativeSource={RelativeSource AncestorType=materialDesign:Card}, Path=ActualHeight}"
                    Padding="0"
                    Visibility="{Binding IsCollapsed, Converter={StaticResource BoolToVisibilityConverter}}"
                    ToolTip="{Binding TranscriptFileName}">
                <Grid>
                    <TextBlock Text="{Binding TranscriptFileName}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Width="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=ActualHeight}"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="NoWrap"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock.LayoutTransform>
                            <RotateTransform Angle="-90"/>
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </Grid>
            </Button>
        </Grid>
    </materialDesign:Card>
</UserControl>
