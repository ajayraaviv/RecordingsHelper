<Window x:Class="RecordingsHelper.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecordingsHelper.WPF"
        xmlns:vm="clr-namespace:RecordingsHelper.WPF.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:RecordingsHelper.WPF.Views"
        xmlns:converters="clr-namespace:RecordingsHelper.WPF.Converters"
        mc:Ignorable="d"
        Title="Audio Recordings Helper" 
        Height="700" Width="1000"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto">
    
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <!-- Home Page -->
        <Grid x:Name="HomePage" Visibility="{Binding CurrentView, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
                <DockPanel>
                    <Border DockPanel.Dock="Right"
                            Background="#FFF59D"
                            Padding="8,4"
                            CornerRadius="12"
                            Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Flask" 
                                                     Width="16" 
                                                     Height="16" 
                                                     VerticalAlignment="Center"
                                                     Foreground="#F57F17"
                                                     Margin="0,0,4,0"/>
                            <TextBlock Text="EXPERIMENTAL" 
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Foreground="#F57F17"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="Audio Recordings Helper" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                               VerticalAlignment="Center"/>
                </DockPanel>
            </materialDesign:ColorZone>

            <!-- Menu Cards -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" MaxWidth="1200" Margin="32">
                    <TextBlock Text="Select an Operation" 
                               Style="{StaticResource MaterialDesignHeadline4TextBlock}" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,40"/>
                    
                    <!-- Redaction Category -->
                    <TextBlock Text="Redaction" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                               Margin="8,0,8,16"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <Grid Margin="0,0,0,32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Redact Card -->
                        <materialDesign:Card Grid.Column="0" Margin="8" UniformCornerRadius="10">
                            <Button Command="{Binding NavigateToRedactCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    MinHeight="140"
                                    ToolTip="Remove or mute specific segments from an audio file. Select time ranges with millisecond precision. Choose to delete segments entirely or mute them.">
                                <StackPanel Margin="20">
                                    <materialDesign:PackIcon Kind="ContentCut" Width="48" Height="48" 
                                                             HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="Redact Audio Segments" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                               TextAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Remove or mute specific segments" 
                                               TextWrapping="Wrap" TextAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </Button>
                        </materialDesign:Card>

                        <!-- Advanced Redact Card -->
                        <materialDesign:Card Grid.Column="1" Margin="8" UniformCornerRadius="10">
                            <Button Command="{Binding NavigateToAdvancedRedactCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    MinHeight="140"
                                    ToolTip="Load transcript insights JSON and select segments to redact based on speaker, text content, or time range. Multi-select with individual mute/remove actions per segment.">
                                <StackPanel Margin="20">
                                    <materialDesign:PackIcon Kind="FileDocumentEdit" Width="48" Height="48" 
                                                             HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="Advanced Redaction" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                               TextAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Redact using transcript insights" 
                                               TextWrapping="Wrap" TextAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </Button>
                        </materialDesign:Card>
                    </Grid>

                    <!-- Transcription Category -->
                    <TextBlock Text="Transcription" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                               Margin="8,0,8,16"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <Grid Margin="0,0,0,32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Transcription Card -->
                        <materialDesign:Card Grid.Column="0" Margin="8" UniformCornerRadius="10">
                            <Button Command="{Binding NavigateToTranscriptionCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    MinHeight="140"
                                    ToolTip="Transcribe audio files using Azure AI Speech-to-Text. Get timestamps, speaker identification, and text transcription.">
                                <StackPanel Margin="20">
                                    <materialDesign:PackIcon Kind="MicrophoneMessage" Width="48" Height="48" 
                                                             HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="Audio Transcription" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                               TextAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Transcribe audio with Azure AI" 
                                               TextWrapping="Wrap" TextAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </Button>
                        </materialDesign:Card>

                        <!-- Batch Transcription Card -->
                        <materialDesign:Card Grid.Column="1" Margin="8" UniformCornerRadius="10">
                            <Button Command="{Binding NavigateToBatchTranscriptionCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    MinHeight="140"
                                    ToolTip="Submit multiple audio files for batch transcription. Upload files, check status, view and save transcripts individually.">
                                <StackPanel Margin="20">
                                    <materialDesign:PackIcon Kind="FormatListBulleted" Width="48" Height="48" 
                                                             HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="Batch Transcription" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                               TextAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Submit multiple files for transcription" 
                                               TextWrapping="Wrap" TextAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </Button>
                        </materialDesign:Card>

                        <!-- Transcript Comparison Card -->
                        <materialDesign:Card Grid.Column="2" Margin="8" UniformCornerRadius="10">
                            <Button Command="{Binding NavigateToTranscriptComparisonCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    MinHeight="140"
                                    ToolTip="Compare multiple transcript versions side by side. Load different transcripts and sync scrolling with audio playback.">
                                <StackPanel Margin="20">
                                    <materialDesign:PackIcon Kind="CompareHorizontal" Width="48" Height="48" 
                                                             HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="Transcript Comparison" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                               TextAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Compare transcript versions side by side" 
                                               TextWrapping="Wrap" TextAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </Button>
                        </materialDesign:Card>
                    </Grid>

                    <!-- Audio Tools Category -->
                    <TextBlock Text="Audio Tools" 
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                               Margin="8,0,8,16"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <!-- Merge Card -->
                        <materialDesign:Card Grid.Column="0" Margin="8" UniformCornerRadius="10">
                            <Button Command="{Binding NavigateToMergeCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    MinHeight="140"
                                    ToolTip="Combine multiple audio files into a single file. Drag and drop to reorder files before merging. Supports various audio formats.">
                                <StackPanel Margin="20">
                                    <materialDesign:PackIcon Kind="MusicNotePlus" Width="48" Height="48" 
                                                             HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="Merge Audio Files" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                               TextAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Combine multiple audio files into one" 
                                               TextWrapping="Wrap" TextAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </Button>
                        </materialDesign:Card>

                        <!-- Split Card -->
                        <materialDesign:Card Grid.Column="1" Margin="8" UniformCornerRadius="10">
                            <Button Command="{Binding NavigateToSplitCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    MinHeight="140"
                                    ToolTip="Split an audio file into multiple parts at specified time points. Add as many split points as needed. Each part is saved as a separate file.">
                                <StackPanel Margin="20">
                                    <materialDesign:PackIcon Kind="CallSplit" Width="48" Height="48" 
                                                             HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="Split Audio File" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                               TextAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Split audio into multiple parts" 
                                               TextWrapping="Wrap" TextAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </Button>
                        </materialDesign:Card>

                        <!-- Convert to MP3 Card -->
                        <materialDesign:Card Grid.Column="2" Margin="8" UniformCornerRadius="10">
                            <Button Command="{Binding NavigateToConvertCommand}" 
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    MinHeight="140"
                                    ToolTip="Convert WAV files to MP3 format with compression options. Reduce file size while maintaining audio quality. Supports batch conversion.">
                                <StackPanel Margin="20">
                                    <materialDesign:PackIcon Kind="FileMusic" Width="48" Height="48" 
                                                             HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                    <TextBlock Text="Convert to MP3" 
                                               Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                               TextAlignment="Center" Margin="0,0,0,8"/>
                                    <TextBlock Text="Convert WAV to MP3 with compression" 
                                               TextWrapping="Wrap" TextAlignment="Center" Opacity="0.7"/>
                                </StackPanel>
                            </Button>
                        </materialDesign:Card>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>    <!-- Content Area for Views -->
        <Grid x:Name="ContentArea">
            <ContentControl Content="{Binding CurrentView}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type vm:MergeViewModel}">
                        <views:MergeView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:RedactViewModel}">
                        <views:RedactView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:SplitViewModel}">
                        <views:SplitView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:AdvancedRedactViewModel}">
                        <views:AdvancedRedactView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:ConvertViewModel}">
                        <views:ConvertView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:TranscriptionViewModel}">
                        <views:TranscriptionView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:BatchTranscriptionViewModel}">
                        <views:BatchTranscriptionView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type vm:TranscriptComparisonViewModel}">
                        <views:TranscriptComparisonView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Grid>
</Window>
